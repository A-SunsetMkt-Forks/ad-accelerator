{
  "manifest_version": 3,
  "name": "Ad Accelerator",
  "version": "1.0",
  "description": "Detects if an add is playing, mutes the video and dramatically increases speed.",
  "permissions": ["webNavigation", "scripting"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }
  ]
}